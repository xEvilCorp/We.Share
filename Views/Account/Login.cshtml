@{    
    ViewData["Title"] = "Login";  
    Layout = "~/Views/Shared/Layout/_clean.cshtml"; 
}    
@section AddToHead{
    <link href="https://fonts.googleapis.com/css?family=Raleway" rel="stylesheet">
}


<style>
    #back {
        width: 100%;
        height: 100%; 
        overflow: auto;
        background-image: linear-gradient(45deg, purple, #00122b);
    }
    #logo {
        max-width: 400px;
        margin:auto;
        display: block;
        margin-top: 8px;
        width: 100%;

    }
    .container {
        max-width: 800px;
    }
    #login {
        max-width: 330px;
        margin: auto;
        background-color:white;
        margin-top: 20px;
        padding: 25px;
    }
    .title {
        text-align: center;
    }
    #title-text {
        font-family: "Raleway Thin", sans-serif;
        font-size: 20px;
        display: block;

    }
    .underline-title {
        background: -webkit-linear-gradient(right, #2c04b3, #bd2d86);
        height: 2px;
        margin-bottom: 10px;
        width: 100%;
        display: block;
    }
</style>
<div id="back">
    <img id="logo" src="~/img/logo2.svg" alt="WeShare">
    <div class="container">
        <div class="row mb-3">
            <div class="col-12">
                <div id="login" class="rounded">
                    <div class="title">
                        <h3 id="title-text">LOGIN</h3>
                        <div class="underline-title"></div>
                    </div>
                    <form asp-action="Login" method="POST">
                        <div class="form-group">
                            <label for="username">Usuário:</label>
                            <input name="username" id="username" class="form-control" autocomplete="on" required />
                            <span for="username" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-1">
                            <label for="password">Código Secreto:</label>
                            <input name="password" id="password" class="form-control" autocomplete="on" required />
                            <span for="password" class="text-danger"></span>
                        </div>
                        <a href="" style="text-align:right; display:block">Esqueceu a senha?</a>
                        <button type="submit" class="btn btn-success form-control mt-2">Entrar</button>
                        <a href="Signup"  class="btn btn-primary form-control mt-2" >Criar conta</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


  